{
  "name": "you-track-activities-widget",
  "version": "1.0.0",
  "private": true,
  "config": {
    "components": "./src",
    "dist": "./dist"
  },
  "scripts": {
    "create-component": "yo @jetbrains/ring-ui:react --path $npm_package_config_components",
    "build": "webpack -p",
    "test": "karma start",
    "lint": "eslint . && npm run stylelint",
    "stylelint": "stylelint --ignore-path .gitignore **/*.css",
    "ci-test": "npm run lint && xvfb-maybe karma start --teamcity",
    "start": "webpack-dev-server -d --history-api-fallback --inline --hot --colors --port 9010",
    "dist": "npm run build && rm -f you-track-activities-widget.zip && zip -r -j you-track-activities-widget.zip ./dist",
    "i18n:extract": "angular-gettext-cli --files \"{src/**/*.js,node_modules/hub-dashboard-addons/components/**/*.js,node_modules/@jetbrains/hub-widget-ui/src/**/*.js}\" --dest src/app/translations/youtrack-activities-widget.pot --marker-name=i18n"
  },
  "babel": {
    "presets": [
      [
        "@jetbrains/jetbrains",
        {
          "useBuiltIns": "usage"
        }
      ]
    ]
  },
  "dependencies": {
    "@babel/core": "7.1.2",
    "@babel/polyfill": "7.0.0",
    "@jetbrains/babel-preset-jetbrains": "2.1.2",
    "@jetbrains/hub-widget-ui": "^1.0.18",
    "@jetbrains/icons": "1.20.1",
    "@jetbrains/logos": "1.0.5",
    "@jetbrains/ring-ui": "^1.0.2",
    "babel-loader": "8.0.4",
    "css-loader": "1.0.0",
    "file-loader": "2.0.0",
    "html-loader": "0.5.5",
    "html-webpack-plugin": "3.2.0",
    "hub-dashboard-addons": "0.1.2",
    "postcss-cssnext": "3.1.0",
    "postcss-import": "12.0.0",
    "postcss-loader": "3.0.0",
    "postcss-modules-values-replace": "3.0.1",
    "prop-types": "15.6.2",
    "react": "16.5.2",
    "react-dom": "16.5.2",
    "redbox-react": "1.6.0",
    "webpack": "3.12.0",
    "webpack-dev-server": "2.11.3"
  },
  "devDependencies": {
    "@jetbrains/eslint-config": "4.0.3",
    "@jetbrains/generator-ring-ui": "1.0.2",
    "@jetbrains/stylelint-config": "1.3.4",
    "angular-gettext-cli": "^1.2.0",
    "angular-gettext-loader": "^1.0.1",
    "babel-eslint": "10.0.1",
    "chai": "4.2.0",
    "chai-as-promised": "7.1.1",
    "chai-dom": "1.8.0",
    "chai-enzyme": "1.0.0-beta.1",
    "electron": "3.0.2",
    "enzyme": "3.6.0",
    "enzyme-adapter-react-16": "1.5.0",
    "eslint": "5.6.1",
    "json-loader": "^0.5.7",
    "karma": "3.0.0",
    "karma-chai-plugins": "0.9.0",
    "karma-electron-launcher": "0.2.0",
    "karma-mocha": "1.3.0",
    "karma-sourcemap-loader": "0.3.7",
    "karma-teamcity-reporter": "1.1.0",
    "karma-webpack": "3.0.5",
    "mocha": "5.2.0",
    "react-test-renderer": "16.5.2",
    "sinon": "5.1.1",
    "sinon-chai": "3.2.0",
    "stylelint": "9.6.0",
    "xvfb-maybe": "0.2.1",
    "yo": "2.0.5"
  },
  "engines": {
    "node": ">=8.0.0"
  }
}
